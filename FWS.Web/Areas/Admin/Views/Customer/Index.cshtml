@model IEnumerable<FWS.Models.Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4 class="text-primary">CUSTOMER LIST</h4>
        </div>
        <div class="col-6  text-end">
<a  asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp CREATE NEW CUSTOMER
            </a>
        </div>
    </div>
    <br />
   



<table class="table table-bordered table-striped" stylestyle="width:100%">
    <thead>
        <tr>
            <th>customer Name</th>
            <th>Address</th>
            <th>Location</th>
               <th>Email</th>
                  <th>Mobile</th>
                  <th></th>
                 
            </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="20%">
                            @obj.CustName
                        </td>
                <td width="20%">
                    @obj.Address
                </td>
                <td width="20%">
                    @obj.Location
                </td>
                <td width="20%">
                    @obj.Email
                </td>
                <td width="20%">
                    @obj.Mobile
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Customer" asp-action="Edit" asp-route-CustId="@obj.custId"
                           class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                 
                            <a asp-controller="Customer" asp-action="Delete" asp-route-CustId="@obj.custId"
                           class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                    </tr>
                }
            </tbody>
</table>
</div>